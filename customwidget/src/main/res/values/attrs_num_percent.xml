<resources>
    <declare-styleable name="NumPercent">
        <!--字体-->
        <attr name="textBold" format="boolean" />
        <!--进度条颜色-->
        <attr name="progressBarColor" format="color" />

        <!--标题字体大小-->
        <attr name="titleTextSize" format="dimension" />
        <!--标题颜色-->
        <attr name="titleTextColor" format="color" />

        <!--进度值字体大小-->
        <attr name="progressValueTextSize" format="dimension" />
        <!--进度值颜色-->
        <attr name="progressValueTextColor" format="color" />

        <!--字体大小-->
        <attr name="textSize" format="dimension" />
        <!--字体颜色-->
        <attr name="textColor" format="color" />

        <!--标题-->
        <attr name="title" format="string" />
        <!--总进度值-->
        <attr name="totalValue" format="integer" />
        <!--进度值-->
        <attr name="progressValue" format="integer" />

        <!--是否显示分数形式，默认是-->
        <attr name="showFraction" format="boolean" />
    </declare-styleable>
</resources>
